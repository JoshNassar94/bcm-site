<div class="container add-small-group-form">
  <h1>Add Staff Member</h1>

  <%= form_for @staff, url: "/admin/add_staff", html: {method: :post} do |f| %>
    <div class="form-group">
      <label for="title">Name</label>
      <%= f.text_field(:name, class: "form-control", id: "title", placeholder: "Ex. Eddie Gilley")%>
    </div>

    <div class="form-group">
        <!--Text area desc-->
        <label for="description">Bio</label>
        <%= f.text_area(:bio, class: "form-control", id:"description", rows: "6", placeholder: "Tell us about the staff member!") %>
    </div>

    <div class="form-group">
        <!--Image-->
        <label>Picture</label>
        <%= f.file_field("uploaded_file") %>
        <small id="imageHelp" class="form-text">JPG, PNG, GIF</small>
    </div>

    <%= f.submit("Add Staff Member", class: "btn btn-default pull-right") %>
  <% end %>
</div>
