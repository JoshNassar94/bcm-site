<div class="container">
  <h1>Login</h1>

  <%= form_tag("/admin/attempt_login", :method => :post) do %>
    <div class="form-group">
      Username: <%= text_field_tag(:username, params[:username], class: "form-control")%>
    </div>
    <div class="form-group">
      Password: <%= password_field_tag(:password, nil, class: "form-control")%>
    </div>
    <%= submit_tag("Log In", class: "btn btn-default") %>
  <% end %>
</div>
