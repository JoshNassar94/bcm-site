<div class="container">
  <div class="row">
    <div class="list-group col-xs-6 col-xs-offset-3">
      <h1>Admin Users</h1>
      <% @users.each do |sm| %>
          <div class="row list-group-item" style="color:black;">
            <div class="col-xs-8">
              <%=sm.first_name.to_s + " " + sm.last_name.to_s%>
            </div>
            <div class="col-xs-1">
              <%= link_to "/admin/edit_user?id="+sm.id.to_s do%>
                <span class="glyphicon glyphicon-pencil" style="color:black;"></span>
              <% end %>
            </div>
            <div class="col-xs-2">
              <%= link_to "/admin/destroy_user?id="+sm.id.to_s, {:method => :delete} do%>
                <span class="glyphicon glyphicon-trash" style="color:black;"></span>
              <% end %>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>
